<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/icon_margin"
    android:paddingEnd="@dimen/icon_margin"
    android:paddingTop="24dp"
    android:paddingBottom="@dimen/icon_margin"
    tools:context=".presentation.media.PlaylistsFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16sp"
        android:textColor="@color/colorBackground"
        android:backgroundTint="?attr/colorOnBackground"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="20dp" />

    <LinearLayout
        android:id="@+id/llPlaylistsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_search_nothing_120"
            android:contentDescription="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/playlists_placeholder"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
