<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/icon_margin"
        android:paddingTop="14dp"
        android:paddingStart="@dimen/icon_margin">


        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/icon_margin"
            android:layout_height="@dimen/icon_margin"
            android:src="@drawable/back_vector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:paddingStart="12dp"
            android:fontFamily="@font/ys_display_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="45dp"
        android:paddingTop="@dimen/padding"
        android:paddingStart="@dimen/icon_margin"
        android:paddingVertical="@dimen/icon_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/black_theame"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings"
            android:fontFamily="@font/ys_display_regular"/>

        <Switch
            android:id="@+id/dark_theme_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding"
        android:paddingHorizontal="@dimen/icon_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings"
            android:fontFamily="@font/ys_display_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_vector"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/icon_margin"
        android:paddingVertical="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/write_support"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings"
            android:fontFamily="@font/ys_display_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_vector" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/padding"
        android:paddingHorizontal="@dimen/icon_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/agree_licence"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings"
            android:fontFamily="@font/ys_display_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_vector"
            />
    </LinearLayout>

</LinearLayout>