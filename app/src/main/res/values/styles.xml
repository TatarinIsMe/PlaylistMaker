<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/icon_margin</item>
    </style>
    <style name="settings_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="settings_liner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
<!--        <item name="android:paddingVertical">@dimen/padding</item>-->
<!--        <item name="android:paddingHorizontal">@dimen/icon_margin</item>-->
    </style>
    <style name="TrackTitle">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackSubtitle">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Shape.SmallRounded" parent="">
        <item name="cornerSize">6dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Cover" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>




</resources>